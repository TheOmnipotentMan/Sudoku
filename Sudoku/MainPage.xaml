                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32*"/>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="62*"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="2">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0.85,0" EndPoint="1,0">
                                    <GradientStop Color="{ThemeResource SystemChromeBlackMediumLowColor}" Offset="0"/>
                                    <GradientStop Color="{ThemeResource SystemChromeAltMediumHighColor}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <!-- Control -->
                        <Grid Style="{StaticResource OptionsFieldGridMargin}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="46*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Random Sudoku Button -->
                            <Button x:Name="GetRandomSudokuButton" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Height="80"
                                    CornerRadius="8" ToolTipService.ToolTip="Load a random Sudoku"
                                    Content="Random Sudoku" FontSize="40" Click="GetRandomSudokuButton_Click"/>
                            
                            <!-- Info on the current Sudoku -->
                            <Grid Grid.Row="2" Background="{ThemeResource SystemBaseLowColor}" CornerRadius="16" ToolTipService.ToolTip="Details about the current sudoku">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Sudoku Details" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="36" Style="{StaticResource HeaderTextBlockStyle}"/>

                                <TextBlock Text="Storage :" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0"
                                           FontSize="24" Style="{StaticResource SubheaderTextBlockStyle}"/>
                                <TextBlock x:Name="CurrentSudokuStorageNameTextBlock" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1"
                                           HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" FontSize="32" TextWrapping="WrapWholeWords"/>

                                <TextBlock Text="Category :" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0"
                                           FontSize="24" Style="{StaticResource SubheaderTextBlockStyle}"/>
                                <TextBlock x:Name="CurrentSudokuCategoryNameTextBlock" Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1"
                                           HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" FontSize="32" TextWrapping="WrapWholeWords"/>

                                <TextBlock Text="Item :" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0"
                                           FontSize="24" Style="{StaticResource SubheaderTextBlockStyle}"/>
                                <TextBlock x:Name="CurrentSudokuItemNameTextBlock" Grid.Row="3" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1"
                                           HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" FontSize="32" TextWrapping="WrapWholeWords"/>
                                
                            </Grid>
                            
                            <!-- Options -->
                            <Grid Grid.Row="4" Background="{ThemeResource SystemBaseLowColor}" CornerRadius="16" ToolTipService.ToolTip="Options">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="6*"/>
                                    <RowDefinition Height="6*"/>
                                    <RowDefinition Height="6*"/>
                                    <RowDefinition Height="6*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Options" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="36" Style="{StaticResource HeaderTextBlockStyle}"/>

                                <Viewbox Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40 12">
                                    <CheckBox x:Name="ValidNumberEntryCheckBox" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Content="Valid Numbers Only" ToolTipService.ToolTip="Allow only valid numbers to be entered into a cell. Requires new game or restart."/>
                                </Viewbox>

                                <Button x:Name="CheckCurrentStateForErrorsButton" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Height="80" CornerRadius="8"
                                        Background="{ThemeResource SystemBaseMediumColor}" ToolTipService.ToolTip="Validate the current state of the Sudoku. Will display whether and where any errors/invalid numbers are in the Sudoku so far"
                                        Click="CheckCurrentStateForErrorsButton_Click">
